<h1>Burger</h1>
<div id='available'>
    <h2>Burgers Available to Eat:</h2>

    {{#each burgers}} {{#unless this.devoured}}
    {{this.id}}. {{this.burger_name}}

    <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="false">
        <button type="submit">Devour it!</button>
    </form>
    {{/unless}} {{/each}}
</div>


<div id='devoured'>
    <h2>Burgers Devoured: </h2>

    {{#each burgers}} {{#if this.devoured}}
    {{this.id}}. {{this.burger_name}}
    <br>

    {{!-- <form actipon="/ai/burgers/{{this.id}}?_method=DELETE" method="POST">
        <input type="hidden" name="delete" value="false">
        <button type="submit">Delete</button>
    </form> --}}
    {{/if}} {{/each}}
</div>

<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-form" action="/" method="POST">

        <div class="form-group">
            <label for="burger_name">Burger name:</label>
            <input type="text" id="burger_name" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>